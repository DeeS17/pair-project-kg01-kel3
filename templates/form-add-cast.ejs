<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/page-title', {title: 'Movie Application'}); %>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1>Add Cast</h1>
        <% if(alert) { %>
            <%- include('partials/validation-message', {alert}); %>
        <% } %>
        <form action="/casts/add" method="post">
            <div class="form-group">
                <label for="firstname">First Name</label><br>
                <input class="form-control" type="text" name="firstname" id="firstname">
            </div>
            <div class="form-group">
                <label for="lastname">Last Name</label><br>
                <input class="form-control" type="text" name="lastname" id="lastname">
            </div>
            <div class="form-group">
                <label for="birthyear">Birth Year</label><br>
                <input class="form-control" type="text" name="birthyear" id="birthyear">
            </div>
            <div class="form-group">
                <label for="phonenumber">Phone Number</label><br>
                <input class="form-control" type="text" name="phonenumber" id="phonenumber">
            </div>
            <div class="form-group">
                <label for="gender">Gender</label><br>
                <input type="radio" name="gender" id="gender" value='Female'><label for="female">Female</label>
                <input type="radio" name="gender" id="gender" value='Male'><label for="male">Male</label>
            </div>
            <div class="form-group">
                <button class="btn btn-outline-primary btn-sm" type="submit">Save</button>
            </div>
        </form>
    </div>
    <%- include('partials/footer') %>
</body>
</html>