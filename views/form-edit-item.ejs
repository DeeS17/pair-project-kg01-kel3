<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/page-title') %>
</head>
<body>
    <%- include('partials/navbar-seller', {usernameLogged}) %>
    <% if(usernameLogged) { %>
        <div class="container">
            <h1>Edit <%= item.name %></h1>
            <form action="/item/update/<%= item.id %>" method="post">
                <div class="form-group">
                    <label for="name">Name</label><br>
                    <input class="form-control" type="text" name="name" id="name" value="<%= item.name %>">
                </div>
                <div class="form-group">
                    <label for="imageurl">Image URL</label><br>
                    <input class="form-control" type="text" name="imageurl" id="imageurl" value="<%= item.imageURL %>">
                </div>
                <div class="form-group">
                    <label for="price">Price</label><br>
                    <input class="form-control" type="number" name="price" id="price" value="<%= item.price %>">
                </div>
                <div class="form-group">
                    <label for="stock">Stock</label><br>
                    <input class="form-control" type="number" name="stock" id="stock" value="<%= item.stock %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-sm" type="submit">Save</button>
                </div>
            </form>
        </div>
        <%- include('partials/footer') %>

    <% } %>
</body>
</html>